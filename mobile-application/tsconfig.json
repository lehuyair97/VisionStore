{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "types": ["node"],
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@context": ["context"],
      "@navigation": ["navigation"],
      "@features": ["features"],
      "@hooks": ["hooks"],
      "@theme": ["theme"],
      "@store": ["store"],
      "@utils": ["utils"],
      "@assets": ["assets"],

      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@navigation/*": ["navigation/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@theme/*": ["theme/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
